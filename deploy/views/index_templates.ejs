<script type="text/html" id="tmplListItem">
    <img src="{{img}}" alt="{{name}}"/>
    <div class="hover">
        {{#url}}
        <a href="{{url}}" target="_blank">{{name}}</a>
        {{/url}}
        {{^url}}
        <a href="#/show/{{_id}}">{{name}}</a>
        {{/url}}
    </div>
</script>

<script type="text/html" id="tmplShowItem">
    <p>RVAMAKER</p>
    <p><img src="{{img}}" alt="{{name}}"/></p>
    <p>{{name}}</p>
    <p><a href="{{url}}" target="_blank">{{url}}</a></p>
    <p>{{#tags}}{{tags.join(",")}}{{/tags}}</p>
</script>

<script type="text/html" id="tmplEntry">
    <p>ADD YOURSELF</p>
    <div>
        <form>
            <div>
                <label for="name">Name</label>
                <input type="text" name="name">
            </div>
            <div>
                <label for="email">Email</label>
                <input type="text" name="email">
            </div>
            <div>
                <label for="url">URL</label>
                <input type="text" name="url">
            </div>
            <div>
                <label for="img">Image</label>
                <input type="file" name="img">
            </div>
            <div>
                <label for="tags"><input type="checkbox" name="tags" value="designer"> Designer</label>
                <label for="tags"><input type="checkbox" name="tags" value="developer"> Developer</label>
                <label for="tags"><input type="checkbox" name="tags" value="photographer"> Photographer</label>
                <label for="tags"><input type="checkbox" name="tags" value="illustrator"> Illustrator</label>
                <label for="tags"><input type="checkbox" name="tags" value="musician"> Musician</label>
                <label for="tags"><input type="checkbox" name="tags" value="writer"> Writer</label>
                <label for="tags"><input type="checkbox" name="tags" value="filmmaker"> Filmmaker</label>
                <label for="tags"><input type="checkbox" name="tags" value="crafter"> Crafter</label>
                <label for="tags"><input type="checkbox" name="tags" value="cook"> Cook</label>
                <label for="tags"><input type="checkbox" name="tags" value="mographer"> Mographer</label>
                <label for="tags"><input type="checkbox" name="tags" value="technologist"> Technologist</label>
            </div>
            <button class="addCreative">Add Me!</button>
        </form>
    </div>
</script>

